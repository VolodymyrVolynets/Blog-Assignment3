<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/header.css">
    <link rel="stylesheet" href="/stylesheet/body.css">
    <%- include('../../partials/bootstrapStyle.ejs')%>
        <title>Document</title>
</head>

<body>
    <header>
        <%- include('../../partials/header')%>
    </header>
    <div class="content body-content">

        <a class="btn btn-primary" href="/admin" role="button">Back</a>
        <a class="btn btn-primary" href="/admin/posts/new" role="button">Add New</a>


        <table class="table">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">date</th>
                    <th scope="col">title</th>
                    <th scope="col">author</th>
                    <th scope="col">description</th>
                </tr>
            </thead>
            <tbody>


                <% for(var i=0; i < posts.length; i++) { %>
                    <tr>
                        <th scope="row"><%- posts[i].id%></th>
                        <td><%- posts[i].date%></td>
                        <td><%- posts[i].title%></td>
                        <td><%- posts[i].author%></td>
                        <td><%- posts[i].description%></td>
                        <td><a href="/admin/posts/remove?id=<%- posts[i].id%>">remove</a></td>
                        <td><a href="/admin/posts/edit?id=<%- posts[i].id%>">edit</a></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <footer>
        <%- include('../../partials/footer')%>
    </footer>

    <%- include('../../partials/bootstrapJS.ejs')%>
</body>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<div id="header-navigation">
    <div id="header-navigation-links" class="content closed">
        <button id="hamburger" onclick="collapse()"><img src="../img/hamburger.png" alt=""></button>
        <div id="header-navigation-pages">
            <a href="../">Home</a>
            <a href="../blog">Blog</a>
            <a href="../about">About</a>
            <!-- <a href="../contact">Contact us</a> -->
        </div>
        <div id="header-navigation-login">
            <% if (user.isLoggedIn) { %>
                <a href="<%- user.isAdmin ? '/admin' : ''%>">Hi <%- user.username %></a>
                <a href="../auth/logout">Log Out</a>
            <% } else { %>
                <a href="../login">Sign in</a>
                <a href="../registration">Sign up</a>
            <% } %>
        </div>
    </div>
</div>

<script>
    function collapse() {
        const header = document.getElementById("header-navigation-links");
        header.classList.toggle("closed");
    }
</script>

